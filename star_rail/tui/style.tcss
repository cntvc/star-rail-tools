/* =================================== Global =================================== */

Screen {
    layers: base overlay notifications;
    overflow: hidden;
}

Button{
    margin: 0 0;
    padding: 0 0;
    color: $text;
    box-sizing: content-box;
    content-align: center middle;
    height:3;
    width: 100%;
    border-top: none;
    border-bottom: none;
    &:focus {
        text-style: none;
        background-tint: $foreground 20%;
    }
    &:hover {
        background: $accent;
        color: $text;
        text-style: bold;
    }
}

/* =================================== Task status =================================== */
TaskBar{
    width:auto;
    margin: 0 1 0 0;
    Static{
        width:auto;
        height:auto;
        max-width:16;
        margin: 0 1 0 0;
    }
    ProgressBar{
        width:15;
        height:auto;
        Bar{
            width: 100%;
        }
    }

}

TaskList{
    layer: overlay;
    width: 30;
    dock:right;
    visibility: hidden;
    &>ListView{
        scrollbar-size: 1 1;
        dock:bottom;
        border:heavy $foreground 40%;
        height:10;
        visibility:visible;
        &>ListItem{
            height:1;
        }
    }
    &.-hidden {
        offset-x: -100%;
    }
}

/* =================================== AccountView =================================== */

AccountView{
    layer: overlay;
    background: $surface;

    border:heavy $foreground 40%;
    width: 30;
    height: 20;
    dock: bottom;
    AccountList{
        scrollbar-size: 1 1;
        row-span:2;
        background:$background;
        & > ListItem{
            height:3;
            &>Static{
                text-align:center;
                padding: 1;
                &:hover {
                    background: $accent;
                    color: $text;
                    text-style: bold;
                }

            background: $block-hover-background;
            }
        }
    }
    #input{
        border: heavy $border-blurred;
        &:focus {
            border: heavy $border;
            background-tint: $foreground 5%;
        }
    }
    &.-hidden {
        offset-x: -100%;
    }
}

DeleteAccountScreen{
    align: center middle;
    VerticalGroup{
        border: heavy $foreground 40%;
        width: 40;
        #question{
            content-align:center middle;
            height:3;
            background: $surface;
        }

    }
}

CreateAccountScreen{
    align: center middle;
    VerticalGroup{
        border: heavy $foreground 40%;
        width: 40;
    }
}

/* =================================== RecordView =================================== */
RecordView{
    #summary{
        grid-size: 3 1;
        height:3;
        keyline:thin $foreground 30%;
        Label{
            content-align:center middle;
            width:1fr;
        }
    }
    VerticalScroll{
        scrollbar-size: 1 1;
    }
    #detail{
        grid-gutter: 1 1;
        grid-rows: auto;
        keyline:thin $foreground 30%;
        #pity_item{
            height:auto;
            #item_name{
                min-width:25;
            }
            #item_index{
                dock:right;
            }
        }

        RecordDetail{
            height:10;
            #item_name{
                min-width:25;
            }
            #item_index{
                dock:right;
            }
        }
    }
}

/* =================================== ImportScreen =================================== */
ImportScreen{
    align:center middle;
    #import_view{
        width: 60;
        height:auto;
        border: heavy $foreground 40%;
    }
    FileDetailView{
        height:auto;
        #import_btn{
            margin: 1 0 0 0;
        }
    }
    FileIndicator{
        height:3;
        content-align:center middle;
    }
    #nav_btn{
        height:auto;
        #prev_button{
            width:50%;
        }
        #next_button{
            width:50%;
        }
    }
}

/* =================================== Footer =================================== */
Footer{
    height:1;
    dock:bottom;
    background:$secondary;
    /*======================= home screen ================================*/
    AccountNav{
        margin: 0 0 0 1;
        dock:left;
        width:auto;
        min-height:3;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }
    RefreshNav{
        margin: 0 0 0 1;
        width:auto;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }
    ImportNav{
        margin: 0 0 0 1;
        width:auto;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }
    ExportNav{
        margin: 0 0 0 1;
        width:auto;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }
    HelpNav{
        margin: 0 0 0 1;
        width:auto;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }

    ReturnBtn{
        margin: 0 0 0 1;
        width:auto;
        &:hover {
            background: $accent;
            color: $text;
            text-style: bold;
        }
    }

    TaskBar{
        dock:right;
    }
}

/* =================================== ExportScreen =================================== */
ExportScreen{
    align: center middle;
    VerticalGroup{
        width: 40;
        border: heavy $foreground 40%;
    }
}

/* =================================== RefreshScreen =================================== */
RefreshScreen{
    align: center middle;
    &>VerticalGroup{
        border: heavy $foreground 40%;
        width: 40;
        height:auto;
    }
}

/* =================================== HelpScreen =================================== */
HelpScreen{
    &>VerticalScroll{
        scrollbar-size: 1 1;
    }

    #title{
        dock:top;
        height:3;
        content-align: center middle;
    }
    AppInfoView{
        grid-size: 4 1;
        height: 3;
        dock: bottom;
        keyline:thin $foreground 30%;
        &> Static{
            width:1fr;
            content-align: center middle;
        }
    }
}
