/* =================================== Config =================================== */

ConfigDialog {
    margin: 1;

    Static {
        height: 3;
        content-align: left middle;
        width: auto;
    }
}

ConfigSwitchItem {
    height: auto;

    &>Switch {
        dock: right;
        height: auto;
        width: auto;
    }
}

ConfigSelectItem {
    height: auto;
    &>Select {
        height: auto;
        dock: right;
        width: 40%;
    }
}